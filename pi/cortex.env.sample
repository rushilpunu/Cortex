# CORTEX Hub Configuration Sample
# Copy this file to .env and edit the values.

# --- BLE Settings ---
CORTEX_SERVICE_UUID="6b3a0001-b5a3-f393-e0a9-e50e24dcca9e"
MIN_RSSI=-80 # Minimum RSSI to consider a device for connection

# --- Data Storage ---
DB_PATH="cortex.db"
# Optional: Also append all readings to a CSV file for easy export/analysis.
CSV_LOG_PATH="cortex_log.csv"
CSV_LOG_ENABLED=false

# --- System Services ---
RENDERER_ENABLED=true
WEB_SERVER_ENABLED=true
VOICE_SERVICE_ENABLED=false

# --- Web Server Settings (if enabled) ---
WEB_HOST="0.0.0.0"
WEB_PORT=8000
ALLOW_CORS=false # Set to true to allow web access from other origins

# --- Renderer Settings (if enabled) ---
THEME="default" # Corresponds to a theme in assets/themes/
QUOTE_CADENCE_SECONDS=300 # How often to show a new quote
NIGHT_MODE_START="22:00"
NIGHT_MODE_END="06:00"
NIGHT_MODE_LUX_THRESHOLD=10.0 # Lux level to trigger auto night mode

# --- Analytics ---
# Enable passive BLE device scanning for occupancy detection
BLE_SNIFFER_ENABLED=true

# --- IPC (Inter-Process Communication) ---
# Using Unix domain sockets is generally recommended for local IPC
IPC_HOST="localhost"
IPC_PORT=6789
